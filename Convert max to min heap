class Solution {
    public int[] maxToMinHeap(int[] nums) {
        int n = nums.length;

        // Start from last non-leaf node and go to root
        for (int i = n / 2 - 1; i >= 0; i--) {
            heapifyDownMin(nums, n, i);
        }

        return nums; // Now nums is a min heap
    }

    // Heapify-down for min heap property
    private void heapifyDownMin(int[] arr, int n, int i) {
        int smallest = i;
        int left = 2 * i + 1;
        int right = 2 * i + 2;

        if (left < n && arr[left] < arr[smallest])
            smallest = left;

        if (right < n && arr[right] < arr[smallest])
            smallest = right;

        if (smallest != i) {
            // Swap
            int temp = arr[i];
            arr[i] = arr[smallest];
            arr[smallest] = temp;

            // Recursively heapify affected subtree
            heapifyDownMin(arr, n, smallest);
        }
    }
}
